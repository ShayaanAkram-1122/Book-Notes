<%- include('partials/header.ejs') %>

<link rel="stylesheet" href="/styles/register.css" />

<div class="login-wrapper">
  <div class="login-container">
    <div class="login-box">
      <h2>ðŸ‘¤ User Profile</h2>
      
      <div class="profile-info">
        <div class="profile-avatar">
          <i class="fa fa-user-circle"></i>
        </div>
        
        <div class="profile-details">
          <div class="form-group">
            <label>Name</label>
            <input type="text" value="<%= user.name %>" readonly />
          </div>
          
          <div class="form-group">
            <label>Email</label>
            <input type="email" value="<%= user.email %>" readonly />
          </div>
          
          <div class="form-group">
            <label>Phone Number</label>
            <input type="text" value="<%= user.phone_number || 'Not provided' %>" readonly />
          </div>
          
          <div class="form-group">
            <label>Member Since</label>
            <input type="text" value="<%= new Date().toLocaleDateString() %>" readonly />
          </div>
        </div>
      </div>
      
      <div class="profile-actions">
        <a href="/settings" class="button-edit">Edit Profile</a>
        <a href="/home" class="button-edit-delete">Back to Home</a>
      </div>
    </div>
  </div>
</div>

<style>
.profile-info {
  margin: 30px 0;
}

.profile-avatar {
  text-align: center;
  margin-bottom: 30px;
}

.profile-avatar i {
  font-size: 80px;
  color: #f39c12;
}

.profile-details {
  margin-bottom: 30px;
}

.profile-details .form-group input {
  background: rgba(255, 255, 255, 0.1);
  color: #2c3e50;
  font-weight: 600;
}

.profile-actions {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.profile-actions a {
  text-decoration: none;
  padding: 12px 24px;
  border-radius: 25px;
  font-weight: 600;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.profile-actions .button-edit {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
}

.profile-actions .button-edit-delete {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
}

.profile-actions a:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}
</style>

<%- include('partials/footer.ejs') %> 